{
	"name": "@undp-data/svelte-undp-components",
	"version": "1.0.0",
	"description": "It manages util functions and svelte components used in UNDP GeoHub",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest --run --passWithNoTests",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/UNDP-Data/geohub.git"
	},
	"author": "United Nations Development Programme",
	"license": "BSD-3-Clause",
	"bugs": {
		"url": "https://github.com/UNDP-Data/geohub/issues"
	},
	"homepage": "https://github.com/UNDP-Data/geohub#readme",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"!dist/**/*.stories.*",
		"!dist/**/*.mdx.*"
	],
	"peerDependencies": {
		"@sveltejs/kit": "^2.0.0",
		"svelte": "^4.0.0"
	},
	"devDependencies": {
		"@storybook/addon-essentials": "^8.0.0",
		"@storybook/addon-interactions": "^8.0.0",
		"@storybook/addon-links": "^8.0.0",
		"@storybook/addon-mdx-gfm": "^8.0.0",
		"@storybook/blocks": "^8.0.0",
		"@storybook/svelte": "^8.0.0",
		"@storybook/sveltekit": "^8.0.0",
		"@storybook/test": "^8.0.0",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@testing-library/svelte": "^5.0.0",
		"@testing-library/user-event": "^14.5.2",
		"@types/eslint": "^8.56.0",
		"@typescript-eslint/eslint-plugin": "^7.0.0",
		"@typescript-eslint/parser": "^7.0.0",
		"@undp-data/undp-bulma": "workspace:^",
		"bulma-switch": "^2.0.4",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-storybook": "^0.8.0",
		"eslint-plugin-svelte": "^2.35.1",
		"jsdom": "^24.0.0",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"publint": "^0.2.0",
		"storybook": "^8.0.0",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"svelte-htm": "^1.2.0",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.0.11",
		"vitest": "^1.2.0"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"dependencies": {
		"@undp-data/date-picker-svelte": "^2.12.1",
		"bignumber.js": "^9.1.2",
		"chroma-js": "^2.4.2",
		"dayjs": "^1.11.10",
		"esm-env": "^1.0.0",
		"lodash-es": "^4.17.21",
		"svelte-range-slider-pips": "^2.2.3",
		"svelte-tippy": "^1.3.2",
		"tippy.js": "^6.3.7"
	}
}
