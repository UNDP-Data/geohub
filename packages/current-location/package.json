	},
	"type": "module",
	"dependencies": {
		"@sveltejs/kit": "^2.0.6",
		"maplibre-gl": "^4.0.0",
		"svelte": "^4.2.8"
	},
	"peerDependencies": {
		"svelte": "^4.0.0"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts"
