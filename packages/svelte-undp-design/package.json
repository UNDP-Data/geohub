{
	"name": "@undp-data/svelte-undp-design",
	"version": "2.4.8",
	"description": "This package is to manage svelte components for UNDP design system in GeoHub",
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-kit sync && svelte-package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest --run --passWithNoTests",
		"coverage": "vitest run --coverage --passWithNoTests",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"private": false,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/UNDP-Data/geohub.git"
	},
	"author": "United Nations Development Programme",
	"license": "BSD-3-Clause",
	"bugs": {
		"url": "https://github.com/UNDP-Data/geohub/issues"
	},
	"homepage": "https://github.com/UNDP-Data/geohub#readme",
	"devDependencies": {
		"@storybook/addon-essentials": "^8.5.1",
		"@storybook/addon-interactions": "^8.5.1",
		"@storybook/addon-links": "^8.5.1",
		"@storybook/addon-mdx-gfm": "^8.5.1",
		"@storybook/blocks": "^8.5.1",
		"@storybook/source-loader": "^8.5.1",
		"@storybook/svelte": "^8.5.1",
		"@storybook/sveltekit": "^8.5.1",
		"@storybook/test": "^8.5.1",
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/kit": "^2.16.1",
		"@sveltejs/package": "^2.3.9",
		"@sveltejs/vite-plugin-svelte": "^3.1.2",
		"@testing-library/svelte": "^5.2.6",
		"@testing-library/user-event": "^14.6.1",
		"@typescript-eslint/eslint-plugin": "8.22.0",
		"@typescript-eslint/parser": "^8.21.0",
		"@undp-data/undp-bulma": "workspace:^",
		"@vitest/coverage-istanbul": "^2.1.8",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-storybook": "^0.11.2",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.14.0",
		"jsdom": "^26.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"sass": "^1.83.4",
		"storybook": "^8.5.1",
		"svelte": "^4.2.19",
		"svelte-check": "^4.1.4",
		"svelte-htm": "^1.2.0",
		"svelte-preprocess": "^6.0.3",
		"tslib": "^2.8.1",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.21.0",
		"vite": "^5.4.14",
		"vitest": "^2.1.8"
	},
	"type": "module",
	"dependencies": {
		"filesize": "^10.1.6",
		"marked": "^15.0.6",
		"svelte-carousel": "^1.0.25",
		"uuid": "^11.0.5"
	},
	"peerDependencies": {
		"svelte": "^4.0.0 || ^5.0.0"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"!dist/**/*.stories.*"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts"
}
