		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"private": false,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/UNDP-Data/geohub.git"
	},
	"author": "United Nations Development Programme",
	"license": "BSD-3-Clause",
	"bugs": {
		"url": "https://github.com/UNDP-Data/geohub/issues"
	},
	"homepage": "https://github.com/UNDP-Data/geohub#readme",
	"devDependencies": {
		"@mdx-js/react": "^2.3.0",
		"@storybook/addon-essentials": "^7.0.0-beta.50",
		"@storybook/blocks": "^7.0.0-beta.50",
		"@storybook/mdx2-csf": "^0.0.4",
		"@storybook/source-loader": "^6.5.16",
		"@storybook/svelte": "^7.0.0-beta.50",
		"@storybook/sveltekit": "^7.0.0-beta.50",
		"@storybook/testing-library": "^0.0.14-next.1",
