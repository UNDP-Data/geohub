{
	"name": "@undp-data/svelte-undp-design",
	"version": "0.2.1",
	"description": "This package is to manage svelte components for UNDP design system in GeoHub",
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-kit sync && svelte-package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest --run --passWithNoTests",
		"coverage": "vitest run --coverage --passWithNoTests",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"private": false,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/UNDP-Data/geohub.git"
	},
	"author": "United Nations Development Programme",
	"license": "BSD-3-Clause",
	"bugs": {
		"url": "https://github.com/UNDP-Data/geohub/issues"
	},
	"homepage": "https://github.com/UNDP-Data/geohub#readme",
	"devDependencies": {
		"@mdx-js/react": "^2.3.0",
		"@storybook/addon-essentials": "7.0.7",
		"@storybook/addon-interactions": "7.0.7",
		"@storybook/addon-links": "7.0.7",
		"@storybook/blocks": "7.0.7",
		"@storybook/mdx2-csf": "^1.0.0",
		"@storybook/source-loader": "^7.0.0",
		"@storybook/svelte": "7.0.7",
		"@storybook/sveltekit": "7.0.7",
		"@storybook/testing-library": "0.1.0",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/package": "^2.0.2",
		"@testing-library/svelte": "^3.2.2",
		"@testing-library/user-event": "^14.4.3",
		"@typescript-eslint/eslint-plugin": "^5.53.0",
		"@typescript-eslint/parser": "^5.53.0",
		"@vitest/coverage-istanbul": "^0.30.0",
		"eslint": "^8.34.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-storybook": "^0.6.11",
		"eslint-plugin-svelte3": "^4.0.0",
		"jsdom": "^21.1.0",
		"prettier": "^2.8.4",
		"prettier-plugin-svelte": "^2.9.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"sass": "^1.58.3",
		"storybook": "7.0.7",
		"svelte-check": "^3.0.3",
		"svelte-htm": "^1.2.0",
		"tslib": "^2.5.0",
		"typescript": "^5.0.0",
		"vite": "^4.1.4",
		"vitest": "^0.30.0"
	},
	"type": "module",
	"dependencies": {
		"@sveltejs/kit": "^1.8.3",
		"filesize": "^10.0.6",
		"svelte": "^3.55.1",
		"svelte-carousel": "^1.0.23"
	},
	"peerDependencies": {
		"@sveltejs/kit": "^1.8.3",
		"svelte": "^3.55.1"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts"
}
