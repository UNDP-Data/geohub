{
	"name": "@undp-data/svelte-undp-design",
	"version": "2.0.0",
	"description": "This package is to manage svelte components for UNDP design system in GeoHub",
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-kit sync && svelte-package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest --run --passWithNoTests",
		"coverage": "vitest run --coverage --passWithNoTests",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"private": false,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/UNDP-Data/geohub.git"
	},
	"author": "United Nations Development Programme",
	"license": "BSD-3-Clause",
	"bugs": {
		"url": "https://github.com/UNDP-Data/geohub/issues"
	},
	"homepage": "https://github.com/UNDP-Data/geohub#readme",
	"devDependencies": {
		"@storybook/addon-essentials": "^8.0.0",
		"@storybook/addon-interactions": "^8.0.0",
		"@storybook/addon-links": "^8.0.0",
		"@storybook/addon-mdx-gfm": "^8.0.0",
		"@storybook/blocks": "^8.0.0",
		"@storybook/source-loader": "^8.0.0",
		"@storybook/svelte": "^8.0.0",
		"@storybook/sveltekit": "^8.0.0",
		"@storybook/test": "^8.0.0",
		"@sveltejs/adapter-auto": "^3.0.1",
		"@sveltejs/package": "^2.2.5",
		"@sveltejs/vite-plugin-svelte": "^3.0.1",
		"@testing-library/svelte": "^5.0.0",
		"@testing-library/user-event": "^14.5.1",
		"@typescript-eslint/eslint-plugin": "7.8.0",
		"@typescript-eslint/parser": "^7.0.0",
		"@undp-data/undp-bulma": "workspace:^",
		"@vitest/coverage-istanbul": "^1.1.0",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-storybook": "^0.8.0",
		"eslint-plugin-svelte": "^2.35.1",
		"jsdom": "^24.0.0",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"sass": "^1.69.5",
		"storybook": "^8.0.0",
		"svelte-check": "^3.6.2",
		"svelte-htm": "^1.2.0",
		"tslib": "^2.6.2",
		"typescript": "^5.3.3",
		"vite": "^5.0.10",
		"vitest": "^1.1.0"
	},
	"type": "module",
	"dependencies": {
		"@sveltejs/kit": "^2.0.6",
		"filesize": "^10.1.0",
		"marked": "^12.0.0",
		"svelte": "^4.2.8",
		"svelte-carousel": "^1.0.25"
	},
	"peerDependencies": {
		"svelte": "^4.0.0"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"!dist/**/*.stories.*"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts"
}
